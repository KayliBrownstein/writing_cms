= render 'layouts/head_devise'

%body.devise
  = render 'layouts/alerts'

  %section.container
    .devise-content
      %h2.devise-title Sign In

      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .devise-field
          = f.label :email, 'Email'
          = f.email_field :email, autofocus: true, required: true

        .devise-field
          = f.label :password, 'Password'
          = f.password_field :password, autocomplete: 'off', required: true

        .row
          - if devise_mapping.rememberable?
            .devise-col.devise-checkbox
              = f.check_box :remember_me
              = f.label :remember_me, 'Remember Me'

          .devise-col.devise-submit
            = f.submit 'Submit', class: 'devise-btn'

    .devise-links
      = render 'devise/shared/links'
