= render 'layouts/head_devise'

%body.devise
  = render 'layouts/alerts'

	%section.container
		.devise-content
  		%h2.devise-title Sign up

			= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
			  = devise_error_messages!

			  .devise-field
			  	= f.label :email, 'Email'
			  	= f.email_field :email, autofocus: true, required: true

			  .devise-field
			  	= f.label :password, 'Password' if @validatable<i>(Minimum of = @minimum_password_length characters)</i>
			    = f.password_field :password, autocomplete: "off", required: true

			  .devise-field
			  	= f.label :password_confirmation, 'Password Confirmation'
			    = f.password_field :password_confirmation, autocomplete: 'off'

			  .devise-submit
			  	= f.submit 'Sign up', class: 'devise-btn'

		.devise-links
			= render 'devise/shared/links'
