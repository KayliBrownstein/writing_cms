= render 'layouts/head_devise'

%body.devise
  = render 'layouts/alerts'

	%section.container
		.devise-content
  		%h2.devise-title Trocar minha senha

			= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
			  = devise_error_messages!
			  = f.hidden_field :reset_password_token

        .devise-field
          = f.label :password, 'Nova senha'
          = f.password_field :password, autofocus: true, autocomplete: 'off', required: true

        .devise-field
			  	= f.label :password_confirmation, 'Confirmar nova senha'
			    = f.password_field :password_confirmation, autocomplete: 'off', required: true

        .devise-submit
			  	= f.submit 'Salvar nova senha', class: 'devise-btn'

    .devise-links
			= render 'devise/shared/links'
